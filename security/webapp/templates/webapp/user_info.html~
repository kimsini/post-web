   <script language="javascript">
    function register() {
        if (($("#password1").val()) == ($("#password2").val())) {
            var form = $("#registerForm")[0];
            var formData = new FormData(form);
            $.ajax({
                url: "{% url 'change_user' pk=user.pk  %}",
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,
                success: function () {
                    location.reload();
                }
            });
        }
    }



</script>
